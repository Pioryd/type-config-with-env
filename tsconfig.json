{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",

  "compilerOptions": {
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",
    "types": ["node", "jest"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/esm",
    "declaration": true
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "**/*.test.*", "**/__mocks__/*", "**/__tests__/*", "**/*.spec.ts"]
}